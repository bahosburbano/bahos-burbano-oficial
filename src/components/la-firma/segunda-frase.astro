---
/* segunda-frase.astro */
---

<section 
  id="conclusion-section"
  class="relative h-[40vh] flex items-center justify-center bg-brand-white overflow-hidden"
>
  <div class="max-w-[1440px] mx-auto px-12 md:px-20 text-center">
    
    <p 
      id="conclusion-text"
      class="font-['ClashDisplay'] font-bold text-[24px] md:text-[38px] text-brand-green-mineral/30 leading-tight tracking-[-0.02em] transition-all duration-[1500ms] ease-out text-pretty"
    >
      "El derecho cuando se diseña con precisión, no solo ordena sistemas; <br class="hidden md:block" />
      <span class="highlight-gold transition-all duration-[1500ms]">consolida poder legítimo"</span>
    </p>

  </div>
</section>

<style>
  /* Estilo del fragmento destacado */
  .highlight-gold {
    display: inline-block;
    font-style: italic;
    color: rgba(197, 158, 85, 0.3); /* Dorado apagado inicial (brand-gold-champagne) */
  }

  /* Estado Activo (Revelado) */
  .is-illuminated {
    color: #0C382E !important; /* Verde Mineral pleno */
    text-shadow: 0 0 20px rgba(12, 56, 46, 0.05);
  }

  .is-illuminated .highlight-gold {
    color: #C59E55 !important; /* Dorado pleno */
    text-shadow: 0 0 15px rgba(197, 158, 85, 0.2);
  }

  /* Efecto Hover Manual */
  #conclusion-section:hover #conclusion-text {
    color: #0C382E;
  }
  #conclusion-section:hover .highlight-gold {
    color: #C59E55;
  }
</style>

<script>
  const section = document.querySelector('#conclusion-section');
  const text = document.querySelector('#conclusion-text');

  const observerOptions = {
    threshold: 0.7
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        text.classList.add('is-illuminated');
      } else {
        text.classList.remove('is-illuminated');
      }
    });
  }, observerOptions);

  if (section) observer.observe(section);
</script>